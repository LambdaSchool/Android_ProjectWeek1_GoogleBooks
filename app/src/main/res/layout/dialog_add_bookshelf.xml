<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text_dialog_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Bookshelf"
            android:textSize="24dp"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edit_text_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Bookshelf Name"
            app:layout_constraintTop_toBottomOf="@+id/text_dialog_label" />

        <Button
            android:id="@+id/button_dialog_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_dialog" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>