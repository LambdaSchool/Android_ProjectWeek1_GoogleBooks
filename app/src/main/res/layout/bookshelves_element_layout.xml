<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bookshelves_element_parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="@dimen/cardview_default_elevation"
    android:orientation="vertical"

    card_view:cardCornerRadius="4dp">

    <!--card_view:cardBackgroundColor="@color/colorAccent"-->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_bookshelves_element_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="NoteTitleHere"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="visible"
            card_view:layout_constraintStart_toEndOf="@id/image_bookshelves_element"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_bookshelves_element_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Book Content ..."
            android:textSize="12sp"
            android:visibility="visible"
            card_view:layout_constraintStart_toEndOf="@id/image_bookshelves_element"
            card_view:layout_constraintTop_toBottomOf="@id/text_bookshelves_element_title" />

        <ImageView
            android:id="@+id/image_bookshelves_element"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@color/colorPrimaryDark"
            android:scaleType="centerCrop"
            card_view:layout_constraintStart_toStartOf="parent" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>

